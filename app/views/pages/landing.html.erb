<script>
  // Add event listener immediately and another one on DOMContentLoaded
  function applyHoverEffects() {
    const featureBoxes = document.querySelectorAll('.card.bg-base-200');
    
    featureBoxes.forEach(box => {
      // First remove any existing listeners to avoid duplicates
      box.removeEventListener('mouseenter', addGlow);
      box.removeEventListener('mouseleave', removeGlow);
      
      // Now add the listeners
      box.addEventListener('mouseenter', addGlow);
      box.addEventListener('mouseleave', removeGlow);
    });
  }
  
  function addGlow(event) {
    this.style.boxShadow = '0 0 20px #5A4E9D';
    this.style.border = '2px solid #F4C430';
    this.style.transform = 'translateY(-5px)';
  }
  
  function removeGlow(event) {
    this.style.boxShadow = '';
    this.style.border = '';
    this.style.transform = '';
  }
  
  // Apply immediately
  applyHoverEffects();
  
  // Also apply when DOM is fully loaded
  document.addEventListener('DOMContentLoaded', applyHoverEffects);
  
  // Also apply after Turbo navigation
  document.addEventListener('turbo:load', applyHoverEffects);
</script>

